{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": [
      "off",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": ["error", { "allow": ["warn", "error", "log"] }],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "react/jsx-uses-vars": [
      2
    ],
    "no-trailing-spaces": [
      0
    ],
    "eol-last": [
      0
    ],
    "object-curly-spacing": "off"
  }
}